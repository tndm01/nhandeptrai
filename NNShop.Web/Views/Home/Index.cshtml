@section homeProduct{
    <div class="banner_bottom">
        <div class="wthree_banner_bottom_left_grid_sub">
        </div>
        <div class="wthree_banner_bottom_left_grid_sub1">
            <div class="col-md-4 wthree_banner_bottom_left">
                <div class="wthree_banner_bottom_left_grid">
                    <img src="/Scripts/acer-aspire-e5-475-33wt-i3-6006u-600-277-1.png" class="img-responsive" style="width:390px"/>
                </div>
            </div>
            <div class="col-md-4 wthree_banner_bottom_left">
                <div class="wthree_banner_bottom_left_grid">
                    <img src="/Scripts/lenovo-ideapad-100s-11iby-600-277.png" class="img-responsive" style="width:390px"/>
                </div>
            </div>
            <div class="col-md-4 wthree_banner_bottom_left">
                <div class="wthree_banner_bottom_left_grid">
                    <img src="/Scripts/asus-x441sa-n3710.png" class="img-responsive" style="width:390px"/>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
    <!-- top-brands -->
    <div class="top-brands">
        <div class="container">
            <h3>Sản Phẩm Mới</h3>
            <div class="agile_top_brands_grids">
                @foreach (var product in Model.HotOffers)
                {
                    var url = "/" + product.Alias + ".p-" + product.ID + ".html";
                    <div class="col-md-3 top_brand_left">
                        <div class="hover14 column">
                            <div class="agile_top_brand_left_grid">
                                <div class="tag"><img src="/Assets/client/images/tag.png" alt="#" class="img-responsive" /></div>
                                
                                <div class="agile_top_brand_left_grid1">
                                    <img src="/Assets/client/css/inew.gif" height="13" />
                                    <figure>
                                        <div class="snipcart-item block">
                                            <div class="snipcart-thumb">
                                                <a href="@url"><img title="#" alt="#" src="@product.Image" style="width:170px; margin-top:50px"/></a>
                                                <p>@product.Name</p>
                                                <h4>
                                                    @product.Price.ToString("N0") VND

                                                @if (product.Promotion.HasValue)
                                                {
                                                    <span style="color:red">@product.Promotion.Value.ToString("N0") VND</span>
                                                }
                                            </h4>
                                        </div>
                                        <div class="snipcart-details top_brand_home_details">
                                            <a href="#"><input type="submit" class="btnAddToCart button" name="submit" data-id="@product.ID" value="Mua hàng" /></a>
                                        </div>
                                    </div>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>
                }
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!-- //top-brands -->
    <!-- fresh-vegetables -->
    <div class="top-brands">
        <div class="container">
            <h3>Sản Phẩm HOT</h3>
            <div class="agile_top_brands_grids">
                @foreach (var topHot in Model.TopHotProducts)
                {
                    var url = "/" + topHot.Alias + ".p-" + topHot.ID + ".html";
                    <div class="col-md-3 top_brand_left">
                        <div class="hover14 column">
                            <div class="agile_top_brand_left_grid">
                                <div class="tag"><img src="/Assets/client/images/tag.png" alt="#" class="img-responsive" /></div>
                                <div class="agile_top_brand_left_grid1">
                                    <img src="/Assets/client/css/inew.gif" height="13" />
                                    <figure>
                                        <div class="snipcart-item block">
                                            <div class="snipcart-thumb">
                                                <a href="@url"><img title="#" alt="#" src="@topHot.Image"style="width:170px; margin-top:50px" /></a>
                                                <p>@topHot.Name</p>
                                                <h4>
                                                    @topHot.Price.ToString("N0") VND
                                                    @if (topHot.Promotion.HasValue)
                                                    {
                                                        <span style="color:red">@topHot.Promotion.Value.ToString("N0") VND</span>
                                                    }
                                                </h4>
                                            </div>
                                            <div class="snipcart-details top_brand_home_details">
                                                <a href="#"><input type="submit" class="btnAddToCart button" data-id="@topHot.ID" name="submit" value="Mua hàng" /></a>
                                            </div>
                                        </div>
                                    </figure>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!-- //fresh-vegetables -->
}

