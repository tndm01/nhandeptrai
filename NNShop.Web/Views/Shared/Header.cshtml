@using Microsoft.AspNet.Identity;
@model List<NNShop.Web.Models.ShoppingCartViewModel>

<div class="agileits_header">
    <div class="w3l_offers">
        <a href="/">
            <img src="/Scripts/33578824341_a4e52463b1_m.jpg" style="width:69%" class="img-responsive" />
        </a>
    </div>
    <div class="w3l_search" style="margin-top:10px">
        <form action="/tim-kiem.html" method="get">
            <input type="text" id="txtKeyword" name="keyword" placeholder="Từ khóa">
            <input type="submit" value="" id="btnSearch">
        </form>
    </div>
    <div class="product_list_header" style="margin-top:10px">
        <input type="hidden" name="cmd" value="_cart" />
        <a href="/gio-hang.html">
            <input type="submit" name="submit" value="Xem Giỏ Hàng" class="button" />
            <span style="color:red">@Model.Count</span>
        </a>
    </div>
    <div class="w3l_header_right">
        <ul>
            <li class="dropdown profile_details_drop" style="margin-top:10px">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user" aria-hidden="true"></i><span class="caret"></span></a>
                <div class="mega-dropdown-menu">
                    <div class="w3ls_vegetables">
                        <ul class="dropdown-menu drp-mnu">
                            @using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { @id = "frmLogout" }))
                            {
                                if (Request.IsAuthenticated)
                                {

                                    @Html.AntiForgeryToken()
                                    <li><a href="/tai-khoan.html">Xin chào: @User.Identity.Name</a></li>
                                    <li><a href="#" id="btnLogout">Thoát</a></li>
                                }
                                else
                                {
                                    <li><a href="/dang-nhap.html">ĐĂNG NHẬP</a></li>
                                    <li><a href="/dang-ky.html">ĐĂNG KÝ</a></li>
                                }
                            }

                        </ul>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <div class="w3l_header_right1">
        <h2><a href="/lien-he.html" style="margin-top:10px;">LIÊN HỆ</a></h2>
    </div>
    <div class="clearfix"> </div>
</div>
